<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxxx.admin.mapper.GoodsTypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xxxx.admin.pojo.GoodsType">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="p_id" property="pId" />
        <result column="state" property="state" />
        <result column="icon" property="icon" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, p_id, state, icon
    </sql>
    <select id="queryAllGoodsTypes" resultType="com.xxxx.admin.dto.TreeDto">
        SELECT
            id,
            p_id AS pId,
            `name`
        FROM
            t_goods_type
    </select>

</mapper>
